{
  "version": 2,
  "builds": [
    {
      "src": "server/*",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/server/app.js" }
  ],
  "crons": [
    {
      "path": "/server/cron/updateDB",
      "schedule": "0 0 * * *"
    }
  ]
}